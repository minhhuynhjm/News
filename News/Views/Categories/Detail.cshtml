@model News.Models.CategoryViewModel


@section head{
    @Styles.Render("~/Content/Tree.css")
    @Styles.Render("~/Content/Site.css")
}
@section scripts{
    @Scripts.Render("~/Scripts/tree.js")
}



<div>
    @if (@ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <div class="panel panel-primary">
        <div class="panel-heading panel-head">Categories</div>
        <div id="frm-author" class="panel-body">
            <div class="modal-header">
                <h3 class="modal-title">Categories details</h3>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(m => m.CategoryName, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control required", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Decription, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Decription, new { @class = "form-control required", @disabled = "disabled" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-danger" id="GoBack" type="submit">Back</button>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Update", "Update", new { id = Model.CategoryId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
