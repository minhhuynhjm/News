<body>

    <!-- Main navbar -->
    <div class="navbar navbar-inverse">
        <div class="navbar-header">

            <ul class="nav navbar-nav visible-xs-block">
                <li><a data-toggle="collapse" data-target="#navbar-mobile"><i class="icon-tree5"></i></a></li>
                <li><a class="sidebar-mobile-main-toggle"><i class="icon-paragraph-justify3"></i></a></li>
            </ul>
        </div>

    </div>
    <!-- /main navbar -->
    <!-- Page container -->
    <div class="page-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main sidebar -->
            <div class="sidebar sidebar-main">
                <div class="sidebar-content">

                    <!-- User menu -->
                    <div class="sidebar-user">
                        <div class="category-content">
                            <div class="media">
                                <a href="#" class="media-left"><img src="~/Template/global_assets/images/placeholders/placeholder.jpg" class="img-circle img-sm" id="idImageUser" alt=""></a>
                                <div class="media-body">
                                    <span class="media-heading text-semibold" id="idShowName"></span>
                                    <div class="text-size-mini text-muted">
                                        <i class="icon-pin text-size-small"></i> &nbsp;HCM, VIETNAM
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /user menu -->
                    <!-- Main navigation -->
                    <div class="sidebar-category sidebar-category-visible">
                        <div class="category-content no-padding">
                            <ul class="navigation navigation-main navigation-accordion">

                                <!-- Main -->
                                <li class="navigation-header"><span>Main</span> <i class="icon-menu" title="" data-original-title="Main pages"></i></li>
                                <li><a href="/Admin"><i class="icon-home4"></i> <span>Dashboard</span></a></li>
                                <li><a href="/Client"><i class="icon-home4"></i> <span>Client</span></a></li>
                                <li><a href="/usermanager"><i class="icon-home4"></i> <span>User Manager</span></a></li>
                                <li><a href="/categories"><i class="icon-home4"></i> <span>Categories</span></a></li>
                                <li><a href="/posts"><i class="icon-home4"></i> <span>Posts</span></a></li>
                                <li><a href="/comments"><i class="icon-home4"></i> <span>Comments</span></a></li>
                                <li><a href="/AppSetting/Create"><i class="icon-home4"></i> <span>AppSettings</span></a></li>
                                <li><a href="/Modules"><i class="icon-home4"></i> <span>Modules</span></a></li>

                            </ul>
                        </div>
                    </div>
                    <!-- /main navigation -->
                </div>
            </div>
            <!-- /main sidebar -->
            <!-- Main content -->
            <div class="content-wrapper">
                <!-- Page header -->
                <div class="page-header page-header-default">
                    <div class="page-header-content">
                        <div class="page-title">
                        </div>
                    </div>
                </div>
                <!-- /page header -->
                <!-- Content area -->
                <div class="content">
                    @RenderBody()
                </div>
                <!-- /content area -->
            </div>
            <!-- /main content -->
        </div>
        <!-- /page content -->
    </div>
    <!-- /page container -->
    <script>

    $( document ).ready(function() {
        $.ajax({
        type: 'GET',
        url: '@Url.Action("ShowUser", "Client")',
        contentType: 'application/json;',
        dataType: 'json',
        success: function (data) {
            if ($.trim(data)) {
                $("#idShowName").text(data.FullName);
                $("#idImageUser").attr("src", data.Image);
            }
            else {
                return false;
            }
        }
    });
    });
    </script>
</body>
</html>

